{% extends 'base.html.twig' %}

{% block title %}
  Mes produits
{% endblock %}

{% block body %}

  {% for msg in app.session.flashbag.get('msg') %}
  <div id="flash">
    <div>
      <strong>{{ msg }}</strong>
    </div>
  </div>
  {% endfor %}

  <div id="content">
    <div>
      <a id="addProduct" href="{{url('app_products_create')}}">
        <button>Ajouter un produit</button>
      </a>
      <ul>
      {% for product in products %}
      <li>
        <a href="{{path('app_products_show', {'id': product.id})}}">
          #{{product.id}} : {{product.reference}}
        </a>
        <a href="{{path('app_products_edit', {'id': product.id})}}">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </a>
        <a href="{{path('app_products_delete', {'id': product.id})}}">
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        </a>
      </li>
      {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
